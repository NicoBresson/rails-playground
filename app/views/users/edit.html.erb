<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @user do |form| %>
    <%= form.error_notification %>
    <%= form.input :first_name %>
    <%= form.input :last_name %>
    <%= form.association :school, collection: School.order('name ASC') %>
    <%= form.button :submit, 'Validate change!', class:"btn btn-info"%>
    <% end %>
  </div>
</div>
